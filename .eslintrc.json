{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",

    "plugins": [
    "react"
    ],

    "rules": {
            "new-cap": 0,
            "prefer-template": 0,
            "global-require": 0,
            "no-unused-expressions": 0,
            "max-len": 0,
            "no-console": 0,
            "no-param-reassign": 0,
            "no-unused-vars": 0,
            "no-global-assign": 0,
            "no-unsafe-negation": 0,
            "no-loop-func": 0,
            "no-shadow": ["error", { "allow": ["err"] }]
        },
        "globals": {
            "describe": true,
            "it": true,
            "before": true,
            "beforeEach": true
        }
    }
